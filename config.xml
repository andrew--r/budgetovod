<?xml version='1.0' encoding='utf-8'?>
<widget id="com.andrew.Budetovod" version="0.9.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
	<name>Бюджетовод</name>
	<description>Простой учёт расходов и доходов</description>
	<author email="scorpion21.97@gmail.com" href="http://andrew-r.ru">Andrew Romanov</author>
	<content src="index.html" />
	<access origin="*" />
	<allow-intent href="http://*/*" />
	<allow-intent href="https://*/*" />
	<allow-intent href="tel:*" />
	<allow-intent href="sms:*" />
	<allow-intent href="mailto:*" />
	<allow-intent href="geo:*" />
	<icon src="icon.png" />
	<splash src="splash.png" />
	<platform name="android">
		<preference name="android-minSdkVersion" value="14" />
		<allow-intent href="market:*" />
		<icon src="res/icons/android/ldpi.png" qualifier="ldpi" />
		<icon src="res/icons/android/mdpi.png" qualifier="mdpi" />
		<icon src="res/icons/android/hdpi.png" qualifier="hdpi" />
		<icon src="res/icons/android/xhdpi.png" qualifier="xhdpi" />
		<icon src="res/icons/android/xxhdpi.png" qualifier="xxhdpi" />
		<icon src="res/icons/android/fr-xxhdpi.png" qualifier="fr-xxhdpi" />
		<splash src="res/screens/android/ldpi.png" qualifier="ldpi" />
		<splash src="res/screens/android/mdpi.png" qualifier="mdpi" />
		<splash src="res/screens/android/hdpi.png" qualifier="hdpi" />
		<splash src="res/screens/android/xhdpi.png" qualifier="xhdpi" />
	</platform>
	<preference name="DisallowOverscroll" value="true" />
	<plugin name="cordova-plugin-whitelist" spec="~1.2.0" />
	<plugin name="cordova-plugin-console" spec="~1.0.1" />
	<plugin name="cordova-plugin-statusbar" spec="~1.0.1" />
	<plugin name="cordova-plugin-indexeddb-async" spec="~0.0.1" />
</widget>
